.scoresBtn {
  margin-top: 80rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  text-align: center;
  overflow: hidden;
  margin-left: -4%;
}
.scoresBtn .answerTips {
  height: 40rpx;
  margin-bottom: 60rpx;
  font-size: 32rpx;
}
.scoresBtn .col-50 {
  width: 46%;
  margin-left: 4%;
  float: left;
}
.scoresBtn .col-50 .button {
  display: inline-block;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 40rpx;
  color: #f0854b;
  font-size: 28rpx;
}
.wrong {
  color: red;
}
.correct {
  color: green;
}
.white_btn {
  border: 1rpx solid #f0854b;
  color: #f0854b !important;
  background-color: #fff!important;
}
.button-fill {
  color: #fff!important;
  background: #f0854b !important;
}
.button_box {
  margin-top: 40rpx;
  padding: 0 60rpx;
}
.button_box .button-big {
  font-size: 34rpx;
  height: 96rpx;
  line-height: 96rpx;
}
.button_box .button {
  width: 100%;
  background: #f0854b;
  border-radius: 8rpx;
  text-align: center;
}
.content-block-title {
  margin: 30rpx 15rpx 10rpx;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  text-transform: uppercase;
  line-height: 1.5;
  color: #6d6d72;
  white-space: initial;
}
.list-block {
  margin: 10rpx 0 35rpx;
  font-size: 36rpx;
}
.list-block .answer {
  background: #fff;
  padding: 0;
  margin: 0;
  position: relative;
  border-top: 1px solid #e7e7e7;
  border-bottom: 1px solid #e7e7e7;
}
.list-block .answer .item-content {
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-block .answer .item-content:not(:last-child) .item-inner {
  border-bottom: 1rpx solid #e7e7e7;
}
.list-block .answer .item-media {
  padding-top: 18rpx;
  padding-bottom: 20rpx;
}
.list-block .answer .item-inner {
  display: block;
  padding-top: 26rpx;
  align-self: stretch;
  margin-left: 15rpx;
  width: 100%;
}
.list-block .answer .item-inner .item-text {
  font-size: 30rpx;
  color: #5f646e;
  overflow: hidden;
  text-overflow: ellipsis;
}
.no-border {
  border-bottom: none!important;
}
